<div class="row">
  <div class="col-md-12 posts1 my-3">
    <h2 class="text-center">投稿一覧</h2>
  </div>

  <% if posts.any? %>
    <div class="row posts1">
      <div class="col-md-3">
        <h3>目次</h3>
        <div class="card p-3">
          <% posts.each do |post| %>
            <%= link_to post.title, "#post-#{post.id}", class: "d-block mb-2" %>
          <% end %>
        </div>
      </div>
      <div class="col-md-9 d-flex flex-wrap justify-content-center">
        <% posts.each do |post| %>
          <div class="card mx-2 p-1 mb-4" id="post-<%= post.id %>" style="width: 70%;">
            <%= image_tag post.get_image, class: "img-thumbnail card-img-top" %>
            <div class="card-body">
              <p>
                <% post.tags.each do |tag| %>
                  <button type="button" class="btn btn-secondary btn-sm" disabled>
                    <span><%= tag.name %></span>
                  </button>
                <% end %>
              </p>
              <!--デザインをつける-->
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.introduction %></p>
              <p class="card-text">コメント数：<%= post.comments.count %></p>
              <% if user_signed_in? %>
                <%= link_to "詳細", post_path(post.id, return_to: request.fullpath), class: "btn btn-primary" %>
              <% else %>
                <%= link_to "詳細", admin_post_path(post.id, return_to: request.fullpath), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
  <div class="alert alert-info text-center my-4 mx-auto" role="alert">
    <p>まだ投稿がありません。</p>
  </div>
  <% end %>
</div>