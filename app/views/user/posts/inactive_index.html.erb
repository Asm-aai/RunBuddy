<div class="container posts1">
  <div class="row">
    <div class="col-md-12 my-3">
      <h2 class="text-center">投稿一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <% if @inactive_posts.any? %>
        <%= render 'list', posts: @inactive_posts, url: inactive_posts_path %>
      <% else %>
        <div class="alert alert-info my-4 mx-auto" role="alert">
          <p>まだ投稿がありません。</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center my-2">
      <%= link_to '戻る', my_page_path, class: "btn btn-secondary" %>
    </div>
  </div>

</div>