<div class="row">
  <div class="col">
    <h2 class="my-3">ユーザー情報</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      </tbody>
    </table>

    <row>
      <% if admin_signed_in? %>
        <%= link_to 'アカウント削除', admin_user_path(user), date: { confirm: '本当に削除しますか？'}, method: :delete, class: "btn btn-danger btn-block" %>
      <% elsif user == current_user %>
        <%= link_to "", edit_user_registration_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
      <% end %>
    </row>

  </div>
</div>
