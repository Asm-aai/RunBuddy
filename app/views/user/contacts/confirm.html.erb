<div class="container-fluid light-blue-container p-5 posts1">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <div class="mb-4">
        <h3 class="text-center mb-4">入力内容の確認</h3>
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <td style="width: 30%;"><strong>お名前</strong></td>
              <td><%= @contact.name %></td>
            </tr>
            <tr>
              <td><strong>メールアドレス</strong></td>
              <td><%= @contact.email %></td>
            </tr>
            <tr>
              <td><strong>件名</strong></td>
              <td><%= @contact.subject %></td>
            </tr>
            <tr>
              <td><strong>メッセージ</strong></td>
              <td style="white-space: pre-wrap;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between">
        <div>
          <%= form_with model: @contact do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :message %>
            <%= f.submit '送信', class: "btn btn-success" %>
          <% end %>
        </div>

        <div>
          <%= form_with model: @contact, url: back_contacts_path do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :message %>
            <%= f.submit '入力画面に戻る', class: "btn btn-info" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>