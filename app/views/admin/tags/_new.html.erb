<div class="container posts1">
  <div class="row">
    <div class="col-md-12 my-3">
      <h2 class="text-center my-4">タグ作成</h2>
      <%= form_with model: tag, url: admin_tags_path, html: { class: 'border rounded p-4' } do |f| %>
        <div class="d-flex flex-column align-items-center">
          <div class="form-group mb-3 w-100">
            <label for="tag_name">タグ名</label>
            <%= f.text_field :name, class: 'form-control', id: 'tag_name', placeholder: '例：ドッグカフェあり' %>
          </div>
          <div class="form-group mb-3 w-100">
            <label for="tag_english_word">画像認証ワード (複数登録する場合は「/」で区切ってください)</label>
            <%= f.text_field :english_word, class: 'form-control', id: 'tag_english_word', placeholder: '例：cafe/shop' %>
          </div>
          <%= f.submit '追加', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>