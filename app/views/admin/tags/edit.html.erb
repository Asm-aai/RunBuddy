<div class="container posts1">
  <div class="row">
    <div class="col-md-12 my-3">
      <h2 class="text-center">タグ編集</h2>
      <%= form_with model: @tag, url: admin_tag_path(@tag), method: :patch do |tag| %>
        <div class="form-group d-flex justify-content-center my-4">
          <%= tag.label :name, 'タグ名', class: "mt-1 mr-3" %>
          <%= tag.text_field :name, class: 'form-control', style: "width: 50%", placeholder: 'タグ名を入力' %>
        </div>
        <div class="text-center">
          <%= tag.submit '保存', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>