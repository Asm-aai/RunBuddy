<div class="container posts1">
  <div class="row">
    <div class="col-md-10 mx-auto my-5">
      <h2 class="mb-4">ユーザー一覧</h2>
      <table class="table table-striped table-bordered">
        <thead class="text-center">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">顧客名</th>
            <th scope="col">メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @user.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

