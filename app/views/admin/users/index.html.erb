<div class="container posts1">
  <div class="row">
    <div class="col-md-10 mx-auto my-5">
      <h2 class="mb-4">ユーザー一覧</h2>
      <table class="table table-striped table-bordered">
        <thead class="text-center">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">登録日</th>
            <th scope="col">顧客名</th>
            <th scope="col">メールアドレス</th>
            <th>投稿数</th>
            <th>コメント数</th>
            <th>リンク</th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @user.each do |user| %>
            <tr>
              <td data-label="ID　　　　　　："><%= user.id %></td>
              <td data-label="登録日　　　　："><%= user.created_at.strftime("%Y年%m月%d日") %></td>
              <td data-label="ユーザー名　　："><%= user.name %></td>
              <td data-label="メールアドレス："><%= user.email %></td>
              <td data-label="投稿数　　　　："><%= user.posts.count %></td>
              <td data-label="コメント数　　："><%= user.comments.count %></td>
              <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

