<div class="container my-4 posts1">
  <h2 class="text-center mb-4">検索結果</h2>
  <% if @range == "投稿" %>
    <div class="mb-5">
      <h3 class="mb-3">投稿検索一覧</h3>
      <% if @posts.any? %>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>ドッグラン名</th>
              <th>紹介文</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= image_tag post.get_image %></td>
                <td><%= link_to post.title, post_path(post), class: 'text-primary' %></td>
                <td><span class="text-muted"> - <%= post.introduction %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted">投稿が見つかりませんでした。</p>
      <% end %>
    </div>
  <% else %>
    <div class="mb-3">
      <h3>ユーザー検索結果一覧</h3>
      <% if @users.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>詳細リンク</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td>
                <% if user_signed_in? %>
                  <%= link_to user.name, user_path(user), class: 'text-primary', style: 'font-size: 24px;' %>
                <% else %>
                  <%= link_to user.name, admin_user_path(user), class: 'text-primary', style: 'font-size: 24px;' %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted">ユーザーが見つかりませんでした。</p>
      <% end %>
    </div>
  <% end %>
</div>