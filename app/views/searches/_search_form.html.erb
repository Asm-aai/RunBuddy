<div>
  <%= form_with url: search_path, local: true, method: :get do |search| %>
    <%= search.select :range, options_for_select([['ユーザー'], ['投稿']]) %>
    <%= search.text_field :word, placeholder:' キーワード検索', style: 'font-size: 18px;', class: "rounded border-0" %>
    <%= search.submit "検索", class: "btn btn-outline-light btn-sm mb-1" %>
  <% end %>
</div>